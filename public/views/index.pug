doctype html
html
  head
    meta(charset='utf-8')
    title Register
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/register.css')
    link(script='/js/jquery.js')
  body

    form(action='/home', method='post')

      #reg-form
        
        table.menu
          tr
            td.log_menu1 
              a.acb(href='#') 
                .abc Register
            td.log_menu2 
              a.acb(href='#') 
                .abc Login
        h2 Login In Into Your Account
        hr
        if errors
          ul(style='color:red; padding-left: 1em')
            for error in errors
              li= error.msg
        table#registration-form
          tr
            td(colspan='2')
              label.user-label username
              input#username.form-control.cridentials(type='text', name='username', placeholder='username', value=last_try,  required='')
          tr
            td(colspan='2')
              label.user-label password
              input#password.form-control.cridentials(type='password', name='password', minlength='6', placeholder='password', required='')
          tr
            td(style='width: 50%')
              input.btn.btn-primary.btn-lg(type='submit', value='Login', style='width:100%; margin-right: 20px;')
                
